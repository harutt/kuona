{% comment %}
  Accepts:
	- product: product object (required)
	- placeholder: placeholder image
	- aspect_ratio: Ratio of the image
	- hover_style: style hover image
	- show_description: Show description
	- show_rating: Show rating
{% endcomment %}
<div
	class="card bg-transparent border-0 gsp-product-card gsp-product-card-skin-list gsp-product-card-skin-predictive-search d-flex align-items-center flex-row">
	<figure class="card-img gsp-product-card-image position-relative overflow-hidden mb-0">
		{% render 'product-image__featured', product: product, aspect_ratio: '1/1', image_size: '300px' %}
	</figure>
	<div class="card-body p-0">
		{% render 'product-card__prices', product: product, custom_css: "fs-14px" %}
		{% render 'product-card__title', product: product, class_css: "fs-15px" %}
	</div>
</div>