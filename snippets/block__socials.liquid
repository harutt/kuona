{% comment %}
	Block Menu
	Accepts:
	- block: block object
{% endcomment %}
{% liquid
	assign layout = block.settings.layout
	assign show_label = block.settings.show_label
	assign title_block = block.settings.title
	assign desc_block = block.settings.desc
	assign color_title = block.settings.color_title
	assign color_desc = block.settings.color_desc
	assign fs_title = block.settings.fs_title
	assign fs_desc = block.settings.fs_desc
	assign spacing = block.settings.spacing
	assign spacing_desc = block.settings.spacing_desc
	assign color_icon = block.settings.color_icon
	assign color_icon_hover = block.settings.color_icon_hover
	assign color_label = block.settings.color_label
	assign color_label_hover = block.settings.color_label_hover
	assign fs_icon = block.settings.fs_icon
	assign fs_label = block.settings.fs_label
	assign spacing_social = block.settings.spacing_social
	assign tag_title = block.settings.title_tag
	capture animation_attr
		render 'animation-attr', type: block.settings.animation_type
	endcapture
	assign content_alignment = block.settings.content_alignment
	assign extended_class_socials = "justify-content-" | append: content_alignment
	if layout == "vertical"
		assign extended_class_socials = "align-items-" | append: content_alignment
	endif
%}
<div
	class="gsp-block__{{ block.id }} gsp-block gsp-block-social gsp-block-has-title" {{- animation_attr -}} {{ block.shopify_attributes }}>
	<div
		class="gsp-block__inner {%- if content_alignment != "default" %} text-{{ content_alignment }} {% endif %}">
		{%- if title_block != blank and title_block != "" %}
			<{{ tag_title }} class="gsp-block-title">{{ title_block }}</{{ tag_title }}>
		{% endif %}
		{%- if desc_block != blank and desc_block != "" %}
			<p class="gsp-block-desc">{{ desc_block }}</p>
		{% endif %}
		<div class="gsp-block-body">
			{% render 'el__social-links',
				layout: layout,
				show_label: show_label,
				extended_class: extended_class_socials,
				instagram_link: settings.social_link_instagram,
				twitter_link: settings.social_link_twitter,
				facebook_link: settings.social_link_facebook,
				pinterest_link: settings.social_link_pinterest,
				snapchat_link: settings.social_link_snapchat,
				tumblr_link: settings.social_link_tumblr,
				youtube_link: settings.social_link_youtube,
				vimeo_link: settings.social_link_vimeo,
				tiktok_link: settings.social_link_tiktok,
				discord_link: settings.social_link_discord,
				whatsapp_link: settings.social_link_whatsapp,
				spotify_link: settings.social_link_spotify,
				linkedin_link: settings.social_link_linkedin,
				line_link: settings.social_link_line
			%}
		</div>
	</div>
</div>
{% style %}
	.gsp-block__{{ block.id }} {
	{%- if color_title != blank and color_title != "rgba(0,0,0,0)" %}
		--gsp-block-color-title: {{ color_title }};
	{% endif -%}
	{% if fs_title != blank and fs_title != 0 %}
		--gsp-block-fs-title: {{ fs_title }}px;
	{% endif -%}
	{% if spacing != blank and spacing != 0 %}
		--gsp-block-spacing: {{ spacing }}px;
	{% endif -%}
	{% if color_icon != blank and color_icon != "rgba(0,0,0,0)" %}
		--gsp-block-color-icon: {{ color_icon }};
	{% endif -%}
	{% if color_icon_hover != blank and color_icon_hover != "rgba(0,0,0,0)" %}
		--gsp-block-color-icon-hover: {{ color_icon_hover }};
	{% endif -%}
	{% if color_label != blank and color_label != "rgba(0,0,0,0)" %}
		--gsp-block-color-label: {{ color_label }};
	{% endif -%}
	{% if color_label_hover != blank and color_label_hover != "rgba(0,0,0,0)" %}
		--gsp-block-color-label-hover: {{ color_label_hover }};
	{% endif -%}
	{% if fs_icon != blank and fs_icon != 0 %}
		--gsp-block-fs-icon: {{ fs_icon }}px;
	{% endif -%}
	{% if fs_label != blank and fs_label != 0 %}
		--gsp-block-fs-label: {{ fs_label }}px;
	{% endif -%}
	{% if spacing_social != blank and spacing_social != 0 %}
		--gsp-block-gap-icon: {{ spacing_social }}px;
	{% endif -%}
	{% if fs_desc != blank and fs_desc != 0 %}
		--gsp-block-fs-desc: {{ fs_desc }}px;
	{% endif -%}
	{% if color_desc != blank and color_desc != "rgba(0,0,0,0)" %}
		--gsp-block-color-desc: {{ color_icon }};
	{% endif -%}
	{% if spacing_desc != blank and spacing_desc != 0 %}
		--gsp-block-spacing-desc: {{ spacing_desc }}px;
	{% endif -%}
	}
{% endstyle %}