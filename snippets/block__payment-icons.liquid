{% comment %}
	Block payment icons
	Accepts:
	- block: block object
	- image_plackholder_index: image plackholder index
{% endcomment %}
{% liquid
	capture animation_attr
		render 'animation-attr', type: block.settings.animation_type
	endcapture
%}
<div class="gsp-block__{{ block.id }} gsp-block gsp-block-payment-icons" {{- animation_attr -}} {{ block.shopify_attributes }}>
	<div class="gsp-block__inner">
		{% render 'el__payment-icons', args: block %}
	</div>
</div>