{% liquid
	assign skin_blogs = section.settings.bc_skin
	assign col_xl = section.settings.rp_item_show_xl
	assign col_lg = section.settings.rp_item_show_lg
	assign col_md = section.settings.rp_item_show_md
	assign col_sm = section.settings.rp_item_show_sm
	assign col = section.settings.rp_item_show_xs
	assign hover_style = nil
	if section.settings.bc_hover_style != 'default'
		assign hover_style = section.settings.bc_hover_style
	endif
	if skin_blogs == nil or skin_blogs == 'default' or skin_blogs == 'inherit'
		assign skin_blogs = settings.bc_skin
	endif

	assign layout = skin_blogs | remove_first: 'skin-' | split: '-'
	assign layout = layout[0]
	if layout == 'list' or layout == 'standard'
		assign is_list = true
	endif

	assign currentID = article.id
%}
{% if blog.articles.size > 1 %}
	<div class="gsp-article-related-post mt-6 mt-lg-7 {{ custom_css }}">
	<h3 class="text-center gsp-article-heading gsp-article-related-post-heading mb-5">
		{{ 'blogs.related_posts' | t }}
	</h3>
	<div class="gsp-article-related-post-content">
		<div {% render 'slider-attr',
			is_list: is_list,
			classes: 'gsp-slider slick-slider gsp-gutter-wrap gsp-listing-inner',
			item_to_show: col_xl,
			arrows: section.settings.rp_slider_show_navigation,
			dots: section.settings.rp_slider_show_pagination,
			auto_height: section.settings.rp_slider_auto_height,
			autoplay: section.settings.rp_slider_autoplay,
			autoplay_speed: section.settings.rp_slider_autoplay_timeout,
			fade: section.settings.rp_slider_fade,
			loop: section.settings.rp_slider_loop,
			center_mode: section.settings.rp_slider_center_mode,
			center_padding: section.settings.rp_slider_center_padding,
			lg_settings: true,
			item_to_show_on_lg: col_lg,
			item_to_scroll_on_lg: col_lg,
			md_settings: true,
			item_to_show_on_md: col_md,
			item_to_scroll_on_md: col_md,
			sm_settings: true,
			item_to_show_on_sm: col_sm,
			item_to_scroll_on_sm: col_sm,
			xs_settings: true,
			item_to_show_on_xs: col,
			item_to_scroll_on_xs: col
		%}
		>
			{%- for _article in blog.articles limit: section.settings.rp_per_page -%}
				{% liquid
					if _article.id == currentID
						continue
					endif
				-%}
				{% render 'article-skins__item',
					article: _article,
					skin: skin_blogs,
					hover_style: hover_style,
					image_ratio: section.settings.bc_aspect_ratio,
					image_size: section.settings.bc_image_size,
					animation_type: section.settings.animation_type
				%}
			{% endfor %}
		</div>
	</div>
</div>
{% endif %}