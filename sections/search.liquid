{% render 'section-start', name: 'search' %}
{% liquid
	assign search_mw = section.settings.search_mw
	capture animation_attr
		render 'animation-attr', type: section.settings.animation_type
	endcapture
%}
<div class="gsp-section-search-inner text-{{ section.settings.search_alignment }}" {{ animation_attr }}>
	{% render 'el__search',
		id: section.id,
		predictive_search: section.settings.search_enable_predictive,
		value_keyword: true,
		size: section.settings.search_size,
		custom_css: "d-inline-block w-100"
	%}
</div>
{% style %}
	{%- if search_mw != blank and search_mw != -1 %}
		.gsp-section-{{ section.id }} gsp-search-form{
		max-width: {{ search_mw }}px !important;
		}
	{% endif -%}
{% endstyle %}
{% render 'section-end' %}
