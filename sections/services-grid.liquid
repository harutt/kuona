<section class="sv-grid">
  <div class="sv-grid__wrap">
    {% for block in section.blocks %}
      <a class="sv-card" href="{{ block.settings.url | default: '#' }}">
        {% if block.settings.image != blank %}
          {{ block.settings.image | image_url: width: 1000 | image_tag: class: 'sv-card__img', alt: block.settings.title | escape }}
        {% endif %}
        <div class="sv-card__overlay">
          <div class="sv-card__title">{{ block.settings.title }}</div>
          {% if block.settings.text != blank %}
            <div class="sv-card__text">{{ block.settings.text }}</div>
          {% endif %}
        </div>
      </a>
    {% endfor %}
  </div>
</section>

<style>
  .sv-grid__wrap{max-width:1280px;margin:40px auto;display:grid;gap:16px;padding:0 18px;grid-template-columns:repeat(3,minmax(0,1fr))}
  .sv-card{position:relative;display:block;overflow:hidden;border:1px solid #eee}
  .sv-card__img{display:block;width:100%;height:360px;object-fit:cover}
  .sv-card__overlay{position:absolute;inset:0;background:rgba(0,0,0,.08);color:#fff;display:flex;flex-direction:column;align-items:center;justify-content:center;text-align:center;padding:18px;opacity:0;transition:.2s ease}
  .sv-card:hover .sv-card__overlay{opacity:1;background:rgba(0,0,0,.45)}
  .sv-card__title{font-size:18px;font-weight:600;letter-spacing:.04em;margin-bottom:6px}
  .sv-card__text{font-size:13px;max-width:420px;opacity:.95}
  @media (max-width:960px){ .sv-grid__wrap{grid-template-columns:repeat(2,minmax(0,1fr))} .sv-card__img{height:280px} }
</style>

{% schema %}
{
  "name":"Services Grid",
  "blocks":[
    {
      "type":"service",
      "name":"Service",
      "settings":[
        { "type":"text", "id":"title", "label":"Title" },
        { "type":"textarea", "id":"text", "label":"Description (shown on hover)" },
        { "type":"image_picker", "id":"image", "label":"Image" },
        { "type":"url", "id":"url", "label":"Link" }
      ]
    }
  ],
  "presets":[{"name":"Services Grid"}]
}
{% endschema %}
