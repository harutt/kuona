<div class="ihc-section" style="padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px 0;">
  <div class="ihc-container">
    {% if section.settings.title != blank %}
      <h2 class="ihc-title">{{ section.settings.title }}</h2>
    {% endif %}

    <div class="ihc-grid ihc-grid--{{ section.settings.columns_desktop }}" data-columns-mobile="{{ section.settings.columns_mobile }}">
      {% for block in section.blocks %}
        {% if block.type == 'image' %}
          <div class="ihc-item" {{ block.shopify_attributes }}>
            {% if block.settings.link != blank %}
              <a href="{{ block.settings.link }}" class="ihc-link">
            {% else %}
              <div class="ihc-link">
            {% endif %}

              <div class="ihc-image-wrapper">
                {% if block.settings.image != blank %}
                  <img src="{{ block.settings.image | image_url: width: 800 }}" alt="{{ block.settings.caption | escape }}" class="ihc-image" loading="lazy" width="800px" height="auto">
                {% else %}
                  <div class="ihc-placeholder">
                    <svg width="60" height="60" viewBox="0 0 60 60" fill="none" xmlns="http://www.w3.org/2000/svg">
                      <path d="M5 5h50v50H5z" stroke="#ccc" stroke-width="2" fill="none"/>
                      <path d="M15 40l10-10 5 5 10-15 10 10" stroke="#ccc" stroke-width="2" fill="none"/>
                    </svg>
                  </div>
                {% endif %}

                <div class="ihc-overlay">
                  <div class="ihc-content">
                    {% if block.settings.caption != blank %}
                      <div class="ihc-caption">{{ block.settings.caption }}</div>
                    {% endif %}
                    {% if block.settings.description != blank %}
                      <div class="ihc-description">{{ block.settings.description }}</div>
                    {% endif %}
                    {% if block.settings.button_text != blank and block.settings.button_link != blank %}
                      <span class="ihc-button-text">{{ block.settings.button_text }}</span>
                    {% elsif block.settings.link != blank %}
                      <span class="ihc-button-text">Learn More</span>
                    {% endif %}
                  </div>
                </div>
              </div>

            {% if block.settings.link != blank %}
              </a>
            {% else %}
              </div>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

<style>
  .ihc-section {
    width: 100%;
  }

  .ihc-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ihc-title {
    text-align: center;
    font-size: 32px;
    font-weight: 600;
    letter-spacing: 0.05em;
    margin-bottom: 40px;
    color: #111;
  }

  .ihc-grid {
    display: grid;
    gap: {{ section.settings.gap }}px;
  }

  .ihc-grid--1 {
    grid-template-columns: 1fr;
  }

  .ihc-grid--2 {
    grid-template-columns: repeat(2, 1fr);
  }

  .ihc-grid--3 {
    grid-template-columns: repeat(3, 1fr);
  }

  .ihc-grid--4 {
    grid-template-columns: repeat(4, 1fr);
  }

  .ihc-item {
    position: relative;
    overflow: hidden;
  }

  .ihc-link {
    display: block;
    text-decoration: none;
    color: inherit;
    position: relative;
    width: 100%;
  }

  .ihc-image-wrapper {
    position: relative;
    width: 100%;
    padding-bottom: {{ section.settings.image_ratio }}%;
    overflow: hidden;
    background: #f5f5f5;
  }

  .ihc-image {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ihc-placeholder {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background: #f5f5f5;
  }

  .ihc-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.6);
    opacity: 0;
    transition: opacity 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 30px;
  }

  .ihc-link:hover .ihc-overlay {
    opacity: 1;
  }

  .ihc-link:hover .ihc-image {
    transform: scale(1.05);
  }

  .ihc-content {
    text-align: center;
    color: #fff;
    transform: translateY(10px);
    transition: transform 0.3s ease 0.1s;
  }

  .ihc-link:hover .ihc-content {
    transform: translateY(0);
  }

  .ihc-caption {
    font-size: 24px;
    font-weight: 600;
    letter-spacing: 0.05em;
    margin-bottom: 8px;
    line-height: 1.3;
  }

  .ihc-description {
    font-size: 14px;
    letter-spacing: 0.03em;
    opacity: 0.9;
    line-height: 1.5;
    margin-bottom: 16px;
  }

  .ihc-button-text {
    display: inline-block;
    margin-top: 16px;
    padding: 8px 24px 4px;
    background: transparent;
    color: #fff;
    font-size: 13px;
    font-weight: 500;
    letter-spacing: 0.05em;
    border-bottom: 1px solid #fff;
    transition: all 0.3s ease;
  }

  .ihc-link:hover .ihc-button-text {
    opacity: 0.8;
  }

  /* Mobile responsive */
  @media (max-width: 768px) {
    .ihc-grid[data-columns-mobile="1"] {
      grid-template-columns: 1fr !important;
    }

    .ihc-grid[data-columns-mobile="2"] {
      grid-template-columns: repeat(2, 1fr) !important;
    }

    .ihc-title {
      font-size: 24px;
      margin-bottom: 30px;
    }

    .ihc-caption {
      font-size: 18px;
    }

    .ihc-description {
      font-size: 13px;
    }

    .ihc-overlay {
      padding: 20px;
    }
  }

  @media (max-width: 480px) {
    .ihc-caption {
      font-size: 16px;
    }

    .ihc-overlay {
      padding: 15px;
    }
  }
</style>

{% schema %}
{
  "name": "Image Hover Caption",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Section Title",
      "default": "Our Services"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "label": "Desktop Columns",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3
    },
    {
      "type": "select",
      "id": "columns_mobile",
      "label": "Mobile Columns",
      "options": [
        {
          "value": "1",
          "label": "1 Column"
        },
        {
          "value": "2",
          "label": "2 Columns"
        }
      ],
      "default": "1"
    },
    {
      "type": "range",
      "id": "gap",
      "label": "Gap Between Images",
      "min": 0,
      "max": 60,
      "step": 4,
      "unit": "px",
      "default": 20
    },
    {
      "type": "range",
      "id": "image_ratio",
      "label": "Image Height Ratio",
      "min": 50,
      "max": 150,
      "step": 5,
      "unit": "%",
      "default": 100,
      "info": "100% = square, 75% = landscape, 125% = portrait"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Padding Top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Padding Bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "Image Item",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "caption",
          "label": "Caption",
          "default": "Service Title"
        },
        {
          "type": "text",
          "id": "description",
          "label": "Description (Optional)",
          "default": "Brief description"
        },
        {
          "type": "url",
          "id": "link",
          "label": "Link URL (Optional)",
          "info": "Makes the entire image clickable"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Custom Button Text (Optional)",
          "info": "If Link URL is set and this is empty, 'Learn More' will be shown automatically"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Custom Button Link (Optional)",
          "info": "Only needed if you want the button to go to a different page than Link URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Image Hover Caption",
      "blocks": [
        {
          "type": "image"
        },
        {
          "type": "image"
        },
        {
          "type": "image"
        }
      ]
    }
  ]
}
{% endschema %}
