                    "label": "t:general.animation_type.options__flip"
                },
                {
                    "value": "zoomOut",
                    "label": "t:general.animation_type.options__zoomOut"
                },
                {
                    "value": "zoomIn",
                    "label": "t:general.animation_type.options__zoomIn"
                }
            ]
        },
        {
            "type": "header",
            "content": "t:sections.divider.settings.header__custom_css"
        },
        {
            "type": "text",
            "id": "custom_class",
            "label": "t:sections.divider.settings.custom_class.label"
        }
    ],
    "presets": [
        {
            "name": "t:sections.divider.name"
        }
    ]
}
{% endschema %}