{%- liquid
	assign style = section.settings.style
	assign size = section.settings.size
	assign align = section.settings.align
	assign custom_width = section.settings.custom_width
	assign color = section.settings.color
	assign pd_top = section.settings.padding_top
	assign pd_bottom = section.settings.padding_bottom

	capture container
		render 'classes-container', container: section.settings.container
	endcapture
	assign container = container | strip_newlines

	capture animation_attr
		render 'animation-attr', type: section.settings.animation_type
	endcapture
-%}

<div class="gsp-divider gsp-divider-{{ section.id }} gsp-divider-{{ style }} {{ section.settings.custom_class }}" {{- animation_attr -}}>
	<div class="{{ container }}">
		<div class="gsp-divider-inner {%- if custom_width != blank %} d-flex justify-content-{{ align }}{% endif -%}">
			<div class="gsp-divider-element">
			</div>
		</div>
	</div>
</div>
{% style %}
	{%- if custom_width != blank %}
		.gsp-divider-{{ section.id }} .gsp-divider-element{
		max-width: {{ custom_width }};
		width: 100%;
		}
	{% endif -%}
	.gsp-divider-{{ section.id }}{
	{%- if size != blank %}
		--gsp-divider-size: {{ size }}px;
	{% endif -%}
	{%- if color != blank and color != "rgba(0,0,0,0)" %}
		--gsp-divider-color: {{ color }};
	{% endif -%}
	{%- if pd_top != blank %}
		--gsp-divider-padding-top: {{ pd_top }}px;
	{% endif -%}
	{%- if pd_bottom != blank %}
		--gsp-divider-padding-bottom: {{ pd_bottom }}px;
	{% endif -%}
	}
{% endstyle %}
{% schema %}
{
    "name": "t:sections.divider.name",
    "settings": [
        {
            "type": "header",
            "content": "t:sections.divider.settings.header__section_divider"
        },
        {
            "type": "select",
            "id": "style",
            "label": "t:sections.divider.settings.style.label",
            "default": "solid",
            "options": [
                {
                    "value": "solid",
                    "label": "t:sections.divider.settings.style.options__solid"
                },
                {
                    "value": "double",
                    "label": "t:sections.divider.settings.style.options__double"
                },
                {
                    "value": "dashed",
                    "label": "t:sections.divider.settings.style.options__dashed"
                },
                {
                    "value": "dotted",
                    "label": "t:sections.divider.settings.style.options__dotted"
                },
                {
                    "value": "groove",
                    "label": "t:sections.divider.settings.style.options__groove"
                },
                {
                    "value": "ridge",
                    "label": "t:sections.divider.settings.style.options__ridge"
                }
            ]
        },
        {
            "type": "color",
            "id": "color",
            "label": "t:sections.divider.settings.color.label"
        },
        {
            "type": "range",
            "id": "size",
            "label": "t:sections.divider.settings.size.label",
            "min": 0,
            "max": 20,
            "step": 1,
            "default": 4
        },
        {
            "type": "text",
            "id": "custom_width",
            "label": "t:sections.divider.settings.custom_width.label",
            "info": "t:sections.divider.settings.custom_width.info"
        },
        {
            "type": "select",
            "id": "align",
            "label": "t:sections.divider.settings.align.label",
            "default": "center",
            "options": [
                {
                    "value": "start",
                    "label": "t:sections.divider.settings.align.options__start"
                },
                {
                    "value": "center",
                    "label": "t:sections.divider.settings.align.options__center"
                },
                {
                    "value": "end",
                    "label": "t:sections.divider.settings.align.options__end"
                }
            ]
        },
        {
            "type": "header",
            "content": "t:sections.divider.settings.header__section_general"
        },
        {
            "type": "select",
            "id": "container",
            "label": "t:general.container.label",
            "default": "inherit",
            "options": [
                {
                    "value": "inherit",
                    "label": "t:general.container.options__inherit"
                },
                {
                    "value": "container",
                    "label": "t:general.container.options__container"
                },
                {
                    "value": "container-xl",
                    "label": "t:general.container.options__container_xl"
                },
                {
                    "value": "container-xxl",
                    "label": "t:general.container.options__container_xxl"
                },
                {
                    "value": "container-fluid",
                    "label": "t:general.container.options__container_fluid"
                },
                {
                    "value": "container-fluid-no-pd",
                    "label": "t:general.container.options__container_fluid_no_pd"
                }
            ]
        },
        {
            "type": "header",
            "content": "t:sections.divider.settings.header__section_padding"
        },
        {
            "type": "number",
            "id": "padding_top",
            "label": "t:sections.divider.settings.padding_top.label",
            "default": 30
        },
        {
            "type": "number",
            "id": "padding_bottom",
            "label": "t:sections.divider.settings.padding_bottom.label",
            "default": 30
        },
        {
            "type": "header",
            "content": "t:general.sections.animations_header_label"
        },
        {
            "type": "select",
            "id": "animation_type",
            "label": "t:general.animation_type.label",
            "default": "inherit",
            "options": [
                {
                    "value": "inherit",
                    "label": "t:general.animation_type.options__inherit"
                },
                {
                    "value": "none",
                    "label": "t:general.animation_type.options__none"
                },
                {
                    "value": "fadeIn",
                    "label": "t:general.animation_type.options__fadeIn"
                },
                {
                    "value": "fadeInUp",
                    "label": "t:general.animation_type.options__fadeInUp"
                },
                {
                    "value": "fadeInDown",
                    "label": "t:general.animation_type.options__fadeInDown"
                },
                {
                    "value": "fadeInLeft",
                    "label": "t:general.animation_type.options__fadeInLeft"
                },
                {
                    "value": "fadeInRight",
                    "label": "t:general.animation_type.options__fadeInRight"
                },
                {
                    "value": "flipInX",
                    "label": "t:general.animation_type.options__flipInX"
                },
