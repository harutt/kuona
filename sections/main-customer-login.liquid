{% liquid
	assign success_message = 'customer.recover_password.success' | t
	capture animation_attr
		render 'animation-attr', type: section.settings.animation_type
	endcapture
%}
{% render 'section-start', name: 'main-customer-login', has_header: false %}
<div class="gsp-customer-forms">
	<div class="container">
		<div class="row px-lg-7">
			<div class="col-lg-6 mb-15 mb-lg-0 pe-xl-2" {{- animation_attr -}}>
				<div class="multi-collapse collapse show" data-show-collapse-by-hash id="login">
					<h2 class="fs-24px mb-4">{{ 'customer.login.title' | t }}</h2>
					{% form 'customer_login' %}
						{% render 'form__error', form: form %}
						<div class="mb-3">
							<input type="email" name="customer[email]" placeholder="{{ 'customer.login.email' | t }}"
								   class="form-control">
						</div>
						<div class="mb-3">
							<input type="password" name="customer[password]"
								   placeholder="{{ 'customer.login.password' | t }}"
								   class="form-control">
						</div>
						<div class="d-grid gap-3">
							<a href="#" data-bs-toggle="collapse" data-bs-target=".multi-collapse" aria-expanded="false"
							   aria-controls="login recover">{{ 'customer.login.forgot_password' | t }}</a>
							<button class="btn btn-primary" type="submit">
								{{ 'customer.login.sign_in' | t }}
							</button>
						</div>
					{% endform %}
				</div>
				<div class="multi-collapse collapse gsp-recover-form" data-show-collapse-by-hash id="recover">
					<h2 class="fs-24px mb-4">{{ 'customer.recover_password.title' | t }}</h2>
					<p>{{ 'customer.recover_password.subtext' | t }}</p>
					<div data-recover-form>
						{% form 'recover_customer_password' %}
							{% render 'form__success', form: form, success_message: success_message %}
							{% render 'form__error', form: form %}
							<div class="mb-3">
								<input class="form-control" type="email" name="email"
									   placeholder="{{ 'customer.recover_password.email' | t }}" spellcheck="false"
									   autocomplete="off" autocapitalize="off">
							</div>
							<div class="d-flex gap-3 align-items-center">
								<button type="submit" class="btn btn-primary">
									{{ 'customer.recover_password.submit' | t }}
								</button>
								<a href="#" class="btn btn-link" data-bs-toggle="collapse"
								   data-bs-target=".multi-collapse"
								   aria-expanded="false" aria-controls="login recover">
									{{ 'customer.recover_password.cancel' | t }}</a>
							</div>
						{% endform %}
					</div>
				</div>
			</div>
			<div class="col-lg-6 ps-lg-4 ps-xl-5 mt-lg-0 mt-5" {{- animation_attr -}}>
				<h2 class="fs-24px mb-4">{{ 'customer.login.new_customer' | t }}</h2>
				<p>{{ 'customer.register.description' | t }}</p>
				<a class="btn btn-primary" href="{{ routes.account_register_url }}">
					{{- 'customer.register.title' | t -}}
				</a>
			</div>
		</div>
	</div>
</div>
{% render 'section-end', has_header: false %}
