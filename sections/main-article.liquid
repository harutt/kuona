{% liquid
	assign layout = section.settings.layout
	assign has_sidebar = false
	assign sidebar_position = section.settings.layout_sidebar_desktop
	assign sidebar_sticky = section.settings.sidebar_sticky
	assign hide_sidebar_mobile = section.settings.hide_sidebar_mobile
	if sidebar_position != 'off'
		assign has_sidebar = true
	endif
%}

{% render 'section-start', name: 'main-article', has_sidebar: has_sidebar, has_header: false %}
{%- if has_sidebar %}
	{%- capture html_sidebar -%}
		{% render 'widget__sidebar', section: section %}
	{%- endcapture -%}
	{% render 'section-sidebar', sidebar: html_sidebar, position: sidebar_position, sticky: sidebar_sticky, hide_mobile: hide_sidebar_mobile %}
{% endif -%}
<article class="gsp-main-article gsp-main-article-{{ layout }}" data-section-id="{{ section.id }}">
	{% render 'article-main__header',
		show_author: section.settings.show_author,
		show_date: section.settings.show_date,
		layout: layout
	%}
	{% render 'article-main__content', custom_css: "mb-5" %}
	{% render 'article-main__footer', show_tags: section.settings.show_tags, show_social: section.settings.show_social %}
	{% render 'article-main__navigation', enable_navigation: section.settings.enable_navigation_post %}
	{% render 'article-main__related' %}
	{% render 'article-main__comment', enable_comment: section.settings.enable_navigation_post %}
</article>
{%- if has_sidebar %}
	{% render 'section-sidebar', status: 'close' %}
{% endif -%}
{% render 'section-end', has_header: false %}
<script type="application/ld+json">
  {{ article | structured_data }}
</script>
